<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blurr"
    tools:context=".SQL.UpdateDB">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="56dp"
        android:fontFamily="@font/arbutus"
        android:padding="10dp"
        android:text="BASIC2"
        android:textColor="#0D2545"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/updateText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/updateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:fontFamily="@font/arbutus"
        android:text="Update your details"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/uID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/uID"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="22dp"
        android:background="#517481"
        android:ems="10"
        android:fontFamily="@font/arbutus"
        android:hint="ID"
        android:inputType="number"
        android:textColor="#FAF6F6"
        android:textColorHint="#7F98A1"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/uName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateText" />

    <EditText
        android:id="@+id/uName"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:background="#517481"
        android:ems="10"
        android:fontFamily="@font/arbutus"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="#FAF6F6"
        android:textColorHint="#7F98A1"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/uemailID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uID" />

    <EditText
        android:id="@+id/uemailID"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="28dp"
        android:background="#517481"
        android:ems="10"
        android:fontFamily="@font/arbutus"
        android:hint="Email Id"
        android:inputType="textEmailAddress"
        android:textColor="#FAF6F6"
        android:textColorHint="#7F98A1"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/uphone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uName" />

    <EditText
        android:id="@+id/uphone"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="61dp"
        android:background="#517481"
        android:ems="10"
        android:fontFamily="@font/arbutus"
        android:hint="Phone NO"
        android:inputType="phone"
        android:textColor="#FAF6F6"
        android:textColorHint="#7F98A1"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btupdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uemailID" />

    <Button
        android:id="@+id/btupdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="31dp"
        android:fontFamily="@font/arbutus"
        android:text="update"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/progressBar_u"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uphone" />

    <ProgressBar
        android:id="@+id/progressBar_u"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btupdate" />
</androidx.constraintlayout.widget.ConstraintLayout>