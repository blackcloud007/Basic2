<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/black">


        <Button
            android:id="@+id/b_frag1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#626365"
            android:fontFamily="@font/aclonica"
            android:text="Fragment 1"
            android:textColor="#C8C5C5"
            app:layout_constraintEnd_toStartOf="@+id/b_frag2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/b_frag2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#626365"
            android:fontFamily="@font/aclonica"
            android:text="Fragment 2"
            android:textColor="#C8C5C5"
            app:layout_constraintBottom_toTopOf="@+id/flfragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/b_frag1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <FrameLayout
            android:id="@+id/flfragment"
            android:name="com.kowshik.basic2.Fragment_1"
            android:layout_width="345dp"
            android:layout_height="151dp"
            android:layout_marginTop="56dp"
            android:background="#121111"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/b_frag1" />

        <TextView
            android:id="@+id/randomNo"
            android:layout_width="142dp"
            android:layout_height="47dp"
            android:layout_marginTop="69dp"
            android:hint="Random No"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flfragment" />

        <Button
            android:id="@+id/bt_recyclerview"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#626365"
            android:fontFamily="@font/aclonica"
            android:text="RecyclerView"
            android:textColor="#C8C5C5"
            app:layout_constraintBottom_toTopOf="@+id/btupdatedb"
            app:layout_constraintEnd_toStartOf="@+id/viewdatabase"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/randomNo" />

        <Button
            android:id="@+id/viewdatabase"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#626365"
            android:fontFamily="@font/aclonica"
            android:text="View Database"
            android:textColor="#C8C5C5"
            app:layout_constraintBottom_toTopOf="@+id/btdelete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/bt_recyclerview"
            app:layout_constraintTop_toBottomOf="@+id/randomNo" />

        <Button
            android:id="@+id/btupdatedb"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#626365"
            android:fontFamily="@font/aclonica"
            android:text="Update DataBase"
            android:textColor="#C8C5C5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btdelete"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_recyclerview" />

        <Button
            android:id="@+id/btdelete"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#626365"
            android:fontFamily="@font/aclonica"
            android:text="Delete Record"
            android:textColor="#C8C5C5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btupdatedb"
            app:layout_constraintTop_toBottomOf="@+id/viewdatabase" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#373636"
        app:headerLayout="@layout/nav_header"
        app:itemTextColor="#E6E7E8"
        app:menu="@menu/drawer_view" />


</androidx.drawerlayout.widget.DrawerLayout>